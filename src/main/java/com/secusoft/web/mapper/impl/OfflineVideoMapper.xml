<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.secusoft.web.mapper.OfflineVideoMapper">

    <sql id="table">
        vi_offline_video
    </sql>
    
    <sql id="whereSql">
        <where>
            <if test="id!=null">
               and id=#{id}
            </if> 
            <if test="pointId!=null">
               and point_id=#{pointId}
            </if>
            <if test="idn!=null">
               and id!=#{idn}
            </if>
        </where>
    </sql>
    <!-- 根据条件查找,返回数量 -->
    <select id="readOfflineVideoCountByParam" parameterType="offlineVideoBean" resultType="long">
        select count(1) from 
        <include refid="table"/>
        <include refid="whereSql"/>
    </select>
    
    <!-- 根据条件查找,返回list -->
    <select id="readOfflineVideoListByParam" parameterType="offlineVideoBean" resultType="offlineVideoBean">
        select * from 
        <include refid="table"/>
        <include refid="whereSql"/>      
    </select>
    
    <!-- 关联查询 -->
    <select id="readOfflineVideo" parameterType="string" resultType="offlineVideoBean">
        select * from 
        <include refid="table"/>
        where camera_id=#{cameraId}
    </select>
</mapper>
