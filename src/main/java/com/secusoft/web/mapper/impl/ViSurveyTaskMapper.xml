<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.secusoft.web.mapper.ViSurveyTaskMapper">

    <!-- 定义查询订单关联用户的 resultMap,将整个的查询结果映射到com.mybatis.entity.Orders中 -->
    <resultMap type="com.secusoft.web.model.ViSurveyTaskBean" id="viSurveyTaskResultMap">
        <!-- 配置映射的订单信息 -->

        <!-- id:查询列中的唯一标识,订单信息中的唯一标识，如果多列组成唯一标识(如：一般数据库设计中的字典表 使用联合主键)，就需要配置多个id
            column:订单信息的唯一标识 列
            property:订单信息的唯一标识列所映射到orders中的那个属性(假如：数据库中orders表中的主键为orders_id,而实体属性名称为ordersId,
                则这个配置应为<id column="orders_id" property="ordersId"/>,类似hibernate实体映射文件配置)。
        -->
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="task_id" property="taskId" jdbcType="VARCHAR"/>
        <result column="survey_name" property="surveyName" jdbcType="VARCHAR"/>
        <result column="begin_time" property="beginTime" jdbcType="TIMESTAMP"/>
        <result column="end_time" property="endTime" jdbcType="TIMESTAMP"/>
        <result column="survey_type" property="surveyType" jdbcType="TINYINT"/>
        <result column="survey_status" property="surveyStatus" jdbcType="BIT"/>
        <result column="survey_stream_status" property="surveyStreamStatus" jdbcType="BIT"/>
        <result column="area_type" property="areaType" jdbcType="BIT"/>
        <result column="topic" property="topic" jdbcType="VARCHAR"/>
        <result column="enable" property="enable" jdbcType="BIT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP"/>
        <!-- 配置映射的关联用户信息 -->

        <!--association:用于映射关联查询单个对象的信息
            property:要将关联查询的用户信息映射到表中那个属性
          -->
        <collection property="viTaskRepoList" ofType="com.secusoft.web.model.ViTaskRepoBean">
            <!-- id:关联查询用户的唯一标识
                column:指定唯一标识用户信息的列
                property:映射到user的那个属性
            -->

            <id column="vi_task_repo_id" property="id"/>
            <result column="task_id" property="taskId"/>
            <result column="repo_id" property="repoId"/>
        </collection>
        <collection property="viTaskDeviceList" ofType="com.secusoft.web.model.ViTaskDeviceBean">
            <!-- id:关联查询用户的唯一标识
                column:指定唯一标识用户信息的列
                property:映射到user的那个属性
            -->

            <id column="vi_task_device_id" property="id"/>
            <result column="task_id" property="taskId"/>
            <result column="device_id" property="deviceId"/>
            <result column="status" property="status"/>
        </collection>
    </resultMap>


    <insert id="insertViSurveyTask" parameterType="com.secusoft.web.model.ViSurveyTaskBean" keyProperty="id"
            useGeneratedKeys="true">
        <!-- selectKey 标签表示子查询中主键的提取问题
                     keyColumn表示查询语句返回结果的列名
                     keyProperty表示将属性设置到某个列中 此处为empNo 中
                     order="BEFORE表示在插入语句之前执行
                     resultType="int"表示返回值得类型为int类型
                 -->
      INSERT INTO vi_survey_task(task_id,topic,survey_name,begin_time,end_time,survey_type,area_type)
        VALUES(#{taskId},#{topic},#{surveyName},#{beginTime},#{endTime},#{surveyType},#{areaType})
    </insert>

     <update id="updateViSurveyTask" parameterType="com.secusoft.web.model.ViSurveyTaskBean">
         update vi_survey_task
         <set>
             <if test="surveyName != null">
                 survey_name=#{surveyName},
             </if>
             <if test="beginTime != null">
                 begin_time=#{beginTime},
             </if>
             <if test="endTime != null">
                 end_time=#{endTime},
             </if>
             <if test="surveyStatus != null">
                 survey_status=#{surveyStatus},
             </if>
             <if test="topic != null">
                 topic=#{topic},
             </if>
             <if test="taskId != null">
                 task_id=#{taskId},
             </if>
             <if test="ModifyTime != null">
                 modify_time=#{ModifyTime},
             </if>
             <if test="enable != null">
                 enable=#{enable},
             </if>
         </set>
         where id=#{id}
     </update>

    <delete id="delViSurveyTask" parameterType="com.secusoft.web.model.ViSurveyTaskRequest">
        delete from vi_survey_task
         <where>
             <if test="id!=null">
                 and id=#{id}
             </if>
             <if test="taskId!=null">
                 and task_id=#{taskId}
             </if>
         </where>
    </delete>
    
    <select id="getAllViSurveyTask" parameterType="com.secusoft.web.model.ViSurveyTaskRequest" resultMap="viSurveyTaskResultMap">
         select vst.*,vtr.id as vi_task_repo_id,vtr.repo_id,vtd.`status`,vtd.id as vi_task_device_id,vtd.device_id
         from vi_survey_task vst
         LEFT JOIN vi_task_repo vtr on vst.task_id=vtr.task_id
        LEFT JOIN vi_task_device vtd on vst.task_id=vtd.task_id
        <where>
            <if test="surveyName!=null">
            AND vst.survey_name=#{surveyName}
            </if>
            <if test="id!=null">
                AND vst.id=#{id}
            </if>
            <if test="taskId!=null">
                AND vst.task_id=#{taskId}
            </if>
            <if test="surveyType!=null">
                AND vst.survey_type=#{surveyType}
            </if>
        </where>
        order by vst.create_time desc,vst.modify_time desc
    </select>

    <select id="getEnabledViSurveyTaskCount" resultType="java.lang.Integer">
        SELECT count(*)
        FROM vi_survey_task vst
        where vst.`enable`=1
    </select>

    <select id="selectExecutingSurveyTaskNumber" resultType="java.lang.Integer">
       select count(id)
       from vi_survey_task
       <where>
           enable = 1
           <if test="userIds!=null">
               and user_id in
               <foreach collection="userIds" index="index" item="userId" open="(" separator="," close=")">
                   #{userId}
               </foreach>
           </if>
       </where>
    </select>
    <select id="selectIdByUserIds" resultType="java.lang.String">
        select task_id
        from vi_survey_task
        <where>
            <if test="userIds!=null">
                and user_id in
                <foreach collection="userIds" index="index" item="userId" open="(" separator="," close=")">
                    #{userId}
                </foreach>
            </if>
        </where>
    </select>
</mapper>