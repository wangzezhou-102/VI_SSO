<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.secusoft.web.persistence.mapper.DeptMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.secusoft.web.persistence.model.Dept">
		<id column="id" property="id" />
		<result column="pid" property="pid" />
		<result column="pids" property="pids" />
		<result column="fullname" property="fullname" />
		<result column="comments" property="comments" />
	</resultMap>

	<select id="tree" resultType="com.secusoft.web.core.node.ZTreeNode">
		select id,pid as pId,fullname as name,
		(
		CASE
		WHEN (pId = 0 OR pId IS NULL) THEN
		'true'
		ELSE
		'false'
		END
		) as isOpen from dept
	</select>

	<select id="list" resultType="map">
		select * from dept
		<if test="condition != null and condition != ''">
			where simplename like CONCAT('%',#{condition},'%') or fullname like CONCAT('%',#{condition},'%')
		</if>
	</select>

</mapper>
